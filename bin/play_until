#!/bin/bash



if [ $# -eq 1 ];then
    t=$1
elif [ $# -eq 2 ];then
    t=$2
fi

function grep_n_shutdown(){
    grep -q "Clementine" $1 && clementine -s && killall dbus-monitor
    #&& shutdown -h 0
}

      

sleep ${t}m && echo "waiting for the end of the current track" && dbus-monitor "interface='org.freedesktop.Notifications'" | grep --line-buffered "member=Notify\|string" | grep_n_shutdown 
